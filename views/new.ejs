        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Your Title">
        </div>
    
         <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[image]" placeholder="Image URL Here">
        </div>
    
